{
	"extends": [
		"eslint:recommended",
		"plugin:prettier/recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"plugins": [
		"prettier",
		"@typescript-eslint"
	],
	"rules": {
		"prettier/prettier": "warn",
		"@typescript-eslint/no-explicit-any": "off",
		"@typescript-eslint/no-unused-vars": "off"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"project": [
			"../tsconfig.json"
		]
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"ignorePatterns": [
		"node_modules",
		"build",
		"out",
		"public"
	]
}
